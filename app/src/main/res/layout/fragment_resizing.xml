<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.asrafkaizen.materialdesignpractice.Fragments.ResizingFragment">


    <TextView
        android:id="@+id/label"
        android:layout_alignParentTop="true"
        android:layout_marginTop="100dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textSize="45sp"
        android:text="@string/nav_item_resize"
        android:textStyle="bold"/>


    <Button
        android:id="@+id/btn_biggertext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:text="Bigger text"/>

    <Button
        android:id="@+id/btn_smallertext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_biggertext"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Smaller text"/>

</RelativeLayout>
